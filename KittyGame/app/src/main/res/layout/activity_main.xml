<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.henriquefilho.vicioemredessociais.MainActivity">

    <ImageView
        app:srcCompat="@drawable/agua_bebida_pp"
        android:id="@+id/waterImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/pao_comida_pp"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodText"
        android:layout_marginBottom="23dp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp" />

    <Button
        android:text="RecomeÃ§ar"
        android:id="@+id/Restart"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/waterImage"
        android:layout_centerHorizontal="true"
        android:layout_width="110dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="800dp"
        app:srcCompat="@drawable/bellow_vivo_pp"
        android:id="@+id/MonsterImage"
        android:layout_alignBottom="@+id/Restart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_height="800dp" />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterText"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/foodText"
        android:layout_alignBottom="@+id/foodText"
        android:layout_toRightOf="@+id/Restart"
        android:layout_toEndOf="@+id/Restart"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />
</RelativeLayout>
